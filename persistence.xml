<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="sakila_db" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>


        <!-- HikariCP DataSource configuration -->
        <properties>
            <!-- JDBC (through HikariCP DataSource) -->
            <property name="hibernate.hikari.dataSourceClassName" value="com.mysql.cj.jdbc.MysqlDataSource"/>
            <property name="hibernate.hikari.dataSource.user" value="root"/>
            <property name="hibernate.hikari.dataSource.password" value="hakim@123"/>
            <property name="hibernate.hikari.dataSource.databaseName" value="sakila"/>
            <property name="hibernate.hikari.dataSource.serverName" value="localhost"/>
            <property name="hibernate.hikari.dataSource.portNumber" value="3307"/>

            <!-- HikariCP pool settings -->
            <property name="hibernate.hikari.maximumPoolSize" value="10"/>
            <property name="hibernate.hikari.minimumIdle" value="2"/>
            <property name="hibernate.hikari.idleTimeout" value="30000"/>
            <property name="hibernate.hikari.maxLifetime" value="1800000"/>
            <property name="hibernate.hikari.connectionTimeout" value="20000"/>

            <!-- Hibernate/JPA settings -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
